<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Homework12">
    <Style x:Key="TextBox" TargetType="TextBox">
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=txbPosition, Path=Text}" Value="директор">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=txbPosition, Path=Text}" Value="интерн">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=txbPosition, Path=Text}" Value="стажер">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>